{
  "info": {
    "name": "Google Speech APIs",
    "description": "Collection for testing Google Cloud Speech APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Text to Speech",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"text\": \"Hello, this is a test of the text to speech API.\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/speech/text-to-speech",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["speech", "text-to-speech"]
        },
        "description": "Converts text to speech and returns an MP3 audio buffer"
      },
      "response": []
    },
    {
      "name": "Speech to Text",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"audio\": \"BASE64_ENCODED_AUDIO_CONTENT\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/speech/speech-to-text",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["speech", "speech-to-text"]
        },
        "description": "Converts speech audio to text. Audio must be base64 encoded and in LINEAR16 format with 16000Hz sample rate"
      },
      "response": []
    }
  ]
}